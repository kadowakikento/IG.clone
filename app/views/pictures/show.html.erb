<p id="notice"><%= notice %></p>

<p>
  <strong>ユーザーネーム:</strong>
  <%= @picture.user_name %>
</p>

<p>
  <strong>内容:</strong>
  <%= @picture.content %>
</p>

<p>
  <strong>画像:</strong>
  <%= image_tag @picture.image.url %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'unlike', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'like', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to '編集', edit_picture_path(@picture) %> |
<%= link_to '一覧へ戻る', pictures_path %>
